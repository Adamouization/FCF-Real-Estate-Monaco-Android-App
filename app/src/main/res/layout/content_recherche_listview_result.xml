<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rechercher_listview_result_title_marginTop"
        android:paddingLeft="@dimen/rechercher_listview_result_title_paddingLeft"
        android:text="@string/content_search_result_title"
        android:textColor="#343232"
        android:textSize="@dimen/rechercher_listview_result_title_txtSize"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linlaHeaderProgressRechercheResults"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/ventes_progress_bar"
            style="@style/Widget.AppCompat.Spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ListView
        android:id="@+id/recherche_result_ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

</LinearLayout>